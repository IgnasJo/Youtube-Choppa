{
  "manifest_version": 3,
  "name": "YouTube Video Marker",
  "version": "1.0",
  "description": "Set and manage markers on YouTube videos.",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "action": {
    "default_popup": "src/popup/popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.youtube.com/*"
      ],
      "js": [
        "src/content/content.js"
      ],
      "css": [
        "src/content/content.css"
      ]
    }
  ]
}